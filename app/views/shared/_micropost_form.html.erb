<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".compose_micropost") %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: Settings.image.format_img %>
  </span>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
<% end %>

<%= javascript_pack_tag "micropost_form" %>
